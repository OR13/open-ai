name: Demo

on:
  push:
    branches:
      - main

jobs:
  demo:
    runs-on: ubuntu-latest
    name: Create Analogy
    steps:
      - name: get completion
        uses: or13/open-ai@v0.0.2
        id: completion
        with:
          api-key: ${{ secrets.OPENAI_API_KEY }}
          prompt: |-
            Create an analogy for this phrase:

            Questions are arrows in that:

      - name: Review the Summary
        run: |-
          echo "${{ steps.completion.outputs.text }}"
